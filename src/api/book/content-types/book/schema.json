{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "cover": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "book_chapters": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::book-chapter.book-chapter",
      "mappedBy": "book"
    }
  }
}
